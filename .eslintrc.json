{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb-typescript/base",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly",
        "leaflet": false,
        "ChartJs": false
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "rules": {
        "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
    }
}
